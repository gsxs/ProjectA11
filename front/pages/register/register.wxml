<!--pages/register/register.wxml-->

<!-- <view wx:if="{{!success}}"> -->

<!-- 用户名 -->
<view class='row'>
    <view class='info'>
    <input  class='info-input' bindinput="handleInputUsername" placeholder="用户名" />
    </view>
</view>

<!-- 密码 -->
<view class='row'>
  <view class='info'>
    <input  type='password' class='info-input' bindinput="handleNewChangesAgain" placeholder="请重新输入密码" />
  </view>
</view>

<!-- 重复密码 -->
<view class='row'>
  <view class='info'>
    <input  type='password' class= 'info-input' bindinput="handleNewChangesAgain" placeholder="请重新输入你的密码" />
  </view>
</view>

<!-- 姓名 -->
<view class='row'>
  <view class='info'>
    <input class= 'info-input' bindinput="handleNewName" placeholder="请输入姓名" />
  </view>
</view>

<!-- 角色 -->
<view class='row'>
  <view class='info'>
    <input class= 'info-input' bindinput="handleNewStudentID" placeholder="请输入学号" />
  </view>
</view>

<!-- 学号 -->
<view class='row'>
  <view class='info'>
    <input class= 'info-input' bindinput="handleNewStudentID" placeholder="请输入学号" />
  </view>
</view>

<!-- 提交 -->
<view>
 <button class='submit' bindtap='submit'>提交</button>
</view>
