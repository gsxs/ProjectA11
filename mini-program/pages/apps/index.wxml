<!--pages/misc/index.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">首页</view>
    <view class="page__desc">应用中心</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{apps}}" wx:key="*this">
        <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/icons/index.png" />
          <view class="weui-grid__label">{{item.title}}</view>
        </navigator>
      </block>
    </view>
  </view>
</view>
